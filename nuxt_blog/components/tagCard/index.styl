.tagCard
  margin-top 20px
  padding 10px 20px
  background #FFF
  border-radius 5px
  box-shadow 0 26px 40px -24px rgba(44, 9, 9, 0.2)
  width 100%
  max-height 28.75rem
  .tagCard_title
    font-size 1.125rem
    font-weight 600
    color #666
    padding 10px 0
  .tagCard_content
    display flex
    flex-direction row
    flex-wrap wrap
    .tag_Parent
      margin 0.3125rem
      .tag_Parent_txt
        border-radius 0.3125rem
        padding 0.375rem
        font-size 0.75rem
        .tag_childern
          display flex
          flex-direction row
          flex-wrap wrap
          border-radius 0.3125rem
          padding 0.375rem
          margin 5px 0
          font-size 0.75rem
