.Card
  background #FFF
  border-radius 5px
  box-shadow 0 26px 40px -24px rgba(44, 9, 9, 0.2)
  width 100%
  max-height 28.75rem
  .Card_title
    font-size 1.125rem
    font-weight 600
    color #666
    padding 10px 20px
  .Card_search
    padding 0px 20px 10px 20px
  .Card_content
    margin-top 0.875rem
    .card_content_title_list
      padding-bottom 1.25rem
      .card_content_title_item
        color #999
        padding 0 20px
        position relative
        cursor pointer
        &:hover
          font-weight 600
          color #ff4747
          &:after
            content ''
            height 1.5rem
            background #ff4747
            position absolute
            left 0
            top 0
            z-index 1
            border 2px solid #ff4747
            border-top-right-radius 5px
            border-bottom-right-radius 5px
            box-shadow 2px 0px 10px 2px rgba(255, 71, 71, 0.3)
        .card_content_title_item_title
          display flex
          justify-content space-between
          height 2.25rem
          line-height 1.5rem
          .item_title
            font-size 1rem
